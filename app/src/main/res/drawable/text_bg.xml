<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFFFFF"/>

    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#FF6B00"/>

    <!-- 모서리 각지게 -->
    <corners android:radius="0dp"/>

    <!-- 내부 여백 (선택사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
